generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pedido {
  id                Int              @id @default(autoincrement())
  fecha             DateTime         @default(now())
  familiar          String
  codigo            String? // Código personalizado (opcional)
  totalMonto        Float // Total sin descuento
  totalConDescuento Float? // Si hay promociones
  estado            EstadoPedido     @default(PENDIENTE)
  comentarios       String? // Notas adicionales
  articulos         ArticuloPedido[] // Relación 1:N
}

model ArticuloPedido {
  id       Int    @id @default(autoincrement())
  pedidoId Int
  pedido   Pedido @relation(fields: [pedidoId], references: [id], onDelete: Cascade)

  nombre     String // Nombre del producto
  cantidad   Int    @default(1) // Por defecto 1
  precioUnit Float // Precio unitario
}

enum EstadoPedido {
  PENDIENTE // Recién creado
  SALIDO // Salió del origen
  ADUANA // Está retenido temporalmente
  RUTA // Va camino al destino
  ENTREGADO // Llegó a destino
}
